        android:layout_alignTop="@+id/single_message_text"
        android:layout_alignEnd="@+id/single_message_text"
        android:layout_alignBottom="@+id/single_message_text"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
